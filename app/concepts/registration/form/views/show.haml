.page-header
  %h3 Sign up
%section
  .div{class: 'col-md-12'}
    .well.authform
      = simple_form_for(form, url: registration_path, html: { class: 'form-horizontal' }) do |f|
        = f.input :name
        = f.input :email
        = f.input :password
        = f.input :password_confirmation
        = f.button :submit, _('registration.new')