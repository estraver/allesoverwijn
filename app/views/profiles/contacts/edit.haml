.well
  = simple_form_for(@form, url: user_profile_path,  html: {class: 'form-horizontal'},
                     wrapper: :horizontal_form,
                     wrapper_mappings: { check_boxes: :horizontal_radio_and_checkboxes,
                                         radio_buttons: :horizontal_radio_and_checkboxes,
                                         file: :horizontal_file_input,
                                         boolean: :horizontal_boolean}) do |f|
    %h4= _('profile.name')
    .form-group
      = f.label _('general.name'), class: 'col-sm-2'
      .col-sm-4= f.input_field :first_name, class: 'form-control', placeholder: _('name.first_name')
      .col-sm-2= f.input_field :middle_name, class: 'form-control', placeholder: _('name.middle_name')
      .col-sm-4= f.input_field :last_name, class: 'form-control', placeholder: _('name.last_name')

    %h4= _('profile.general')
    = f.input :date_of_birth, as: :bootstrap_datepicker, icon_append: 'calendar', wrapper: :horizontal_date_input, placeholder: _('date.formats.default.human')
    = f.input :birth_place
    = f.input :home
    = f.input :gender, as: :radio_buttons, collection: [:male, :female]

    = f.button :submit, _('profile.general.new')